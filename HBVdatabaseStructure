CREATE DATABASE HBV;
CREATE TABLE restaurants
  (
  restaurantsID INT PRIMARY KEY,
  restaurantsName VARCHAR(255),
  restaurantsAddress VARCHAR(255),
  foodType VARCHAR(255),
  restaurantInfo VARCHAR(255),
  tablesFree INT,
  seatsOnTable INT[],
  price VARCHAR(255) /*pæling að hafa þetta int en
  samt erfitt að hafa tölu yfir veitingastað?  */

  );



CREATE TABLE ReviewDB {
  restaurantNR INT,
  restaurantGrade INT,
  restaurantReview VARCHAR(255),
  FOREIGN KEY (resturantNR) REFERENCES restaurants(restaurantsID)
};
CREATE TABLE bookingDB {
  resturantNR INT,
  bookTable INT,
  bookingDate VARCHAR(255)
  FOREIGN KEY (bookTable) REFERENCES restaurants(seatsOnTable)
  FOREIGN KEY (resturantNR) REFERENCES restaurants(restaurantsID)
};
